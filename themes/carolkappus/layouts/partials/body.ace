.container
  .row
    div class="{{if (fileExists (printf "%s%s" .File.Dir  "/sidebar.md"))}}col-md-8{{else}}col-md-12{{end}}"
      {{ if .Title}}
        h1 {{ .Title }}
      {{- end}}
      {{ .Content }}
    {{if (fileExists (printf "%s%s" .File.Dir  "/sidebar.md")) -}}
      .sidebar.col-md-4
        {{readFile (printf "%s%s" .File.Dir  "/sidebar.md") | markdownify}}
    {{- end }}
