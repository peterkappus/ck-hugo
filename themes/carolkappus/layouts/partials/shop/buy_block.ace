.card.bg-info.text-light
  center
    h3 ${{ string .Params.price }}
    {{ if .Params.shipping }}
    small + ${{ .Params.shipping  }} postage to USA & Canada
    {{ else }}
    small Emailed to you after purchase (no shipping)
    {{- end }}
    {{ partial "buybutton.html" . }}
    / = include partials/shop/christmas_message.html .
.show-small
  = include partials/relateditems.html .
